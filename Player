import javafx.scene.control.Button;
import java.util.ArrayList;

public class Player {
	
	private String name;
	private String color;
	private int victoryPoints;
	private int[] resources;

	public Player(String name, String color) {
		this.name = name;
		this.color = color;
		victoryPoints = 0;
		resources = new int[5];
	}
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getColor() {
		return color;
	}

	public void setColor(String color) {
		this.color = color;
	}

	public int getVictoryPoints() {
		return victoryPoints;
	}

	public void setVictoryPoints(int victoryPoints) {
		this.victoryPoints = victoryPoints;
	}
	
	public int[] getResources() {
		return resources;
	}

	public void setResources(int[] resources) {
		this.resources = resources;
	}
	
	public boolean deductResourcesRoad() {
		if (resources[0]>0 && resources[2]>0) {
			resources[0]--;
			resources[2]--;
			return true;
		}
		else
			return false;	
	}
	
	public boolean deductResourcesSettlement() {
		if (resources[0]>0 && resources[2]>0 && resources[1]>0 && resources[4]>0) {
			resources[0]--;
			resources[2]--;
			resources[1]--;
			resources[4]--;
			return true;
		}
		else
			return false;	
	}
	
	public boolean deductResourcesCity() {
		if (resources[1]>1 && resources[3]>2) {
			resources[1] = resources[1] - 2;
			resources[3] = resources[3] - 3;
			return true;
		}
		else
			return false;	
	}

}
