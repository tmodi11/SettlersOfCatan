	public void d1Clicked (ActionEvent evt){
		Random random = new Random();
		int rand = random.nextInt(6)+1;
		
		if (previousDie1==null)
			d11.setStyle("-fx-opacity:0");
		else
			previousDie1.setStyle("-fx-opacity:0");
		
		if (rand==1) {
			d11.setStyle("-fx-opacity:100");
			previousDie1 = d11;
		}
		else if (rand==2) {
			d12.setStyle("-fx-opacity:100");
			previousDie1 = d12;
		}
		else if (rand==3) {
			d13.setStyle("-fx-opacity:100");
			previousDie1 = d13;
		}
		else if (rand==4) {
			d14.setStyle("-fx-opacity:100");
			previousDie1 = d14;
		}
		else if (rand==5) {
			d15.setStyle("-fx-opacity:100");
			previousDie1 = d15;
		}
		else if (rand==6) {
			d16.setStyle("-fx-opacity:100");
			previousDie1 = d16;
		}
		
		System.out.println(rand);
	}
	
	public void d2Clicked (ActionEvent evt){
		Random random = new Random();
		int rand = random.nextInt(6)+1;
		
		if (previousDie2==null)
			d21.setStyle("-fx-opacity:0");
		else
			previousDie2.setStyle("-fx-opacity:0");
		
		if (rand==1) {
			d21.setStyle("-fx-opacity:100");
			previousDie2 = d21;
		}
		else if (rand==2) {
			d22.setStyle("-fx-opacity:100");
			previousDie2 = d22;
		}
		else if (rand==3) {
			d23.setStyle("-fx-opacity:100");
			previousDie2 = d23;
		}
		else if (rand==4) {
			d24.setStyle("-fx-opacity:100");
			previousDie2 = d24;
		}
		else if (rand==5) {
			d25.setStyle("-fx-opacity:100");
			previousDie2 = d25;
		}
		else if (rand==6) {
			d26.setStyle("-fx-opacity:100");
			previousDie2 = d26;
		}
		
		System.out.println(rand);
	}
	
	public void helpClicked (ActionEvent evt) {
		System.out.println("HIII");
		File pdfFile = new File("C:\\Users\\Twesha\\workspace\\CatanRules.pdf");
		try {
			Desktop.getDesktop().open(pdfFile);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public void endTurn (ActionEvent evt) {
		if (currentPlayer == p1)
			currentPlayer = p2;
		else if (currentPlayer == p2)
			currentPlayer = p3;
		else if (currentPlayer == p3)
			currentPlayer = p4;
		else
			currentPlayer = p1;
	}
	
}
